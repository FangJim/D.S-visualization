extends ../layout 
block stylesheets 
    link(href='/css/basics/array.css' rel='stylesheet')

block container
    section#intro
        .container
            .row
                .col-md-12
                    canvas#canvas.array.col-md-12(width="1000" height= "400")
                    div.methods
                        div.insert.method
                            span Insert
                            input.input.insert.index(type="text" placeholder='index')
                            input.input.insert.value(type="text" placeholder='value')
                            button.btn.btn-success.go(type='button') Go
                        div.delete.method
                            span Delete
                            input.input.delete.index(type="text" placeholder='index')
                            input.input.delete.value(type="text" placeholder='value')
                            button.btn.btn-success.go(type='button') Go

block javascript 
    script(src='/js/array.js')