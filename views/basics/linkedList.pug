extends ../layout 
block stylesheets 
    link(href='/css/basics/linkedList.css' rel='stylesheet')

block container
    section#intro
        .container
            .row
                .col-md-12
                    div.linkedList.col-md-6.col-md-offset-3
                    div.methods
                        div.insert.method
                            span Insert
                            input.input.insert.index(type="text" placeholder='index')
                            input.input.insert.value(type="text" placeholder='value')
                            button.btn.btn-success.go(type='button') Go
                        div.delete.method
                            span Delete
                            input.input.delete.index(type="text" placeholder='index')
                            input.input.delete.value(type="text" placeholder='value')
                            button.btn.btn-success.go(type='button') Go

block javascript 
    script(src='/js/linkedList.js')