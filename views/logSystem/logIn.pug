extends ../layout 
block stylesheets 
    link(href='/css/logSystem/logIn.css' rel='stylesheet')


block container
    .container
        .wrapper 
            header  LogIn
            form(action="logIn" method="post")
                if message === "1" 
                    div.field.email.shake.error
                        div.input-area 
                            input.input.eInput(type="text" placeholder="email"  name="email"  required)
                            i.icon.fas.fa-envelope
                            i.error.error-icon.fas.fa-exclamation-circle
                        div.error.error-txt Name can't be blank!
                    div.field.password.shake.error
                        div.input-area 
                            input.input.pInput(type="text" placeholder="password" maxlength="10" name="password" required)
                            i.icon.fas.fa-lock
                            i.error.error-icon.fas.fa-exclamation-circle
                        div.error.error-txt Password can't be blank!
                else if message === "2"
                    div.field.email
                        div.input-area 
                            input.input.eInput(type="text" placeholder="email" name="email"  required)
                            i.icon.fas.fa-envelope
                            i.error.error-icon.fas.fa-exclamation-circle
                        div.error.error-txt Name can't be blank!
                    div.field.password.shake.error
                        div.input-area 
                            input.input.pInput(type="text" placeholder="password" maxlength="10" name="password" required)
                            i.icon.fas.fa-lock
                            i.error.error-icon.fas.fa-exclamation-circle
                        div.error.error-txt Invalid password entered!
                else if message === "3"
                    div.field.email.shake.error
                        div.input-area 
                            input.input.eInput(type="text" placeholder="email"  name="email"  required)
                            i.icon.fas.fa-envelope
                            i.error.error-icon.fas.fa-exclamation-circle
                        div.error.error-txt Invalid credentials entered
                    div.field.password.shake.error
                        div.input-area 
                            input.input.pInput(type="text" placeholder="password" maxlength="10" name="password" required)
                            i.icon.fas.fa-lock
                            i.error.error-icon.fas.fa-exclamation-circle
                        div.error.error-txt Invalid password entered!
                else if message === "4"
                    div.field.email
                        div.input-area 
                            input.input.eInput(type="text" placeholder="email"  name="email"  required)
                            i.icon.fas.fa-envelope
                            i.error.error-icon.fas.fa-exclamation-circle
                        div.error.error-txt An error occurred while checking for existing user!
                    div.field.password.shake.error
                        div.input-area 
                            input.input.pInput(type="text" placeholder="password" maxlength="10" name="password" required)
                            i.icon.fas.fa-lock
                            i.error.error-icon.fas.fa-exclamation-circle
                        div.error.error-txt An error occurred while checking for existing user!
                else 
                    div.field.email
                        div.input-area 
                            input.input.eInput(type="text" placeholder="email" name="email"  required)
                            i.icon.fas.fa-envelope
                            i.error.error-icon.fas.fa-exclamation-circle
                        div.error.error-txt Name can't be blank!
                    div.field.password
                        div.input-area 
                            input.input.pInput(type="text" placeholder="password" maxlength="10" name="password" required)
                            i.icon.fas.fa-lock
                            i.error.error-icon.fas.fa-exclamation-circle
                        div.error.error-txt Invalid password entered!
                input.input.submit(type="submit")
