extends ../layout 
block stylesheets 
    link(href='/css/trees/BST.css' rel='stylesheet')

block container
    section#intro
        .container
            .row
                .col-md-12
                    div.methods
                        div.traversal.method
                            button.btn.btn-outline-danger.traversal.preOrder(type='button') Preorder
                            button.btn.btn-outline-danger.traversal.inOrder(type='button') Inorder
                            button.btn.btn-outline-danger.traversal.postOrder(type='button') Postorder
                    div.BST.col-md-6.col-md-offset-3
                    div.methods
                        div.insert.method
                            span Insert
                            input.input.insert.insertValue(type="text" placeholder='value')
                            button.btn.btn-success.insertGo(type='button') Go
                        div.delete.method
                            span Delete
                            input.input.delete.deleteValue(type="text" placeholder='value')
                            button.btn.btn-success.deleteGo(type='button') Go

block javascript 
    script(src='/js/trees/BST.js')