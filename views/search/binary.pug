block container
    .container
        .find
        div.circular
        i.fas.fa-info-circle.tips
        div.group
            div.steps
                p.step1 step1  Sort
                div.insert.method 
                    p step2  caculate the &nbsp;
                    p.middle middle's &nbsp;
                    p value 
                div.insert.method 
                    p The search value is on the &nbsp;
